<form action="/questions" accept-charset="UTF-8" method="post">
  <input name="question_id" type="hidden" value="<%= id %>">

  <div id="question" tabindex="-1">
    <%= header %>
  </div>

  <div class="form-group">
    <div class="multiple-choice">
      <input type="radio" name="response" id="response_yes" value="yes">
      <label for="response_yes">Yes</label>
    </div>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_no" value="no">
      <label for="response_no">No</label>
    </div>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_dont_know" value="dont_know">
      <label for="response_dont_know">Don't know</label>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="medium button">Next step</button>
  </div>
</form>
