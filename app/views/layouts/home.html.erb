<%= render layout: 'layouts/base' do %>
  <div class="l-masthead">
    <div class="l-banner-container">
      <%= render 'components/logo_link' %>
      <% if content_for?(:page_nav) %>
        <%= content_for(:page_nav) %>
      <% else %>
        <%= render 'components/page_nav' %>
      <% end %>
    </div>
  </div>
  <%= render 'components/language_banner' unless default_locale? || content_lang_matches_locale? %>
  <div class="l-home">
    <main role="main" id="content" tabindex="-1">
      <%= yield %>
    </main>
  </div>
<% end %>
